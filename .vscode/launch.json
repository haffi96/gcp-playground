{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "ws server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/chat-app",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "fastapi server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host=0.0.0.0",
                "--port=8000",
            ],
            "cwd": "${workspaceFolder}/chat_app_fastapi",
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}